# Makefile for main
# Y. Liow
#-------------------------------------------------------------------------
# Macros
#-------------------------------------------------------------------------
CXX 	= g++
CXXFLAGS = -Wall
LINK 	= g++
LINKFLAGS =
OBJS 	= main.o
EXE 	= main.exe
#-------------------------------------------------------------------------
# Executable
#-------------------------------------------------------------------------
$(EXE): $(OBJS)
		$(LINK) $(LINKFLAGS) $(OBJS) -o $(EXE)
#-------------------------------------------------------------------------
# Object Files
#-------------------------------------------------------------------------
main.o: main.cpp
		$(CXX) $(CXXFLAGS) main.cpp -o main.o
#-------------------------------------------------------------------------
# Utilities
#-------------------------------------------------------------------------
clean:
		rm $(OBJS) $(EXE)
c:
		rm $(OBJS) $(EXE)
run:
		./$(EXE)
r:
		./$(EXE)